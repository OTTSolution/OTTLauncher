<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:focusable="true"
    android:gravity="center">
    <com.xugaoxiang.launcher.view.MLImageView
        android:id="@+id/iv_app_icon"
        android:layout_width="@dimen/w_300"
        android:layout_height="@dimen/h_300"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        app:ml_border_width="4dp"
        app:ml_press_alpha="50"
        app:ml_radius="@dimen/w_100"
        app:ml_shape_type="rectangle"
        >
    </com.xugaoxiang.launcher.view.MLImageView>

    <TextView
        android:id="@+id/tv_app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="appName"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginTop="@dimen/h_20"
        />
</LinearLayout>